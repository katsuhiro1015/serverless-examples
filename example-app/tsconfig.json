{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "lib": ["ESNext"],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "sourceMap": false,
    "target": "ES2020",
    "outDir": "lib"
  },
  "include": ["src/**/*.ts", "src/index.ts"]
}